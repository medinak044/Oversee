<%- include("partials/header.ejs", {title: ` - Items`, body_id: `items`} )%>
    <%- include("partials/navbar.ejs", {bg: `dark`})%>
        <div class="container">

            <h1>Dev Tools Page</h1>
            <!-- Page will be populated with all users plus a dropdown menu for each box for options -->

            <!-- Session user profile info box plus dropdown menu-->
            <h2>Current Session User: <%=sessionUser.username %>
            </h2>
            <ul>
                <div class="card">
                    <div class="card-header"><b>
                            <%=sessionUser.username %>
                        </b>
                        <%=sessionUser._id %>
                    </div>
                </div>
            </ul>

            <!-- Multiple user info boxes plus dropdown menus-->
            <h2>All Users<b>(<%=users.length%>)</b>:</h2>
            <ol>
                <% for( let i=0; i < users.length; i++ ) { %>
                    <div class="card">
                        <li>
                            <div class="card-header">
                                <b>
                                    <%=users[i].username %>
                                </b>
                                <%=users[i]._id %>
                                    <form action="/devtools/delete-user/<%=users[i]._id %>" method="post">
                                        <input class="btn btn-danger" type="submit" value="Delete User">
                                    </form>
